{
  "swagger": "2.0",
  "info": {
    "title": "REST API for 'WEConnect Web App'",
    "description": "This is a web app that provides a platform where business owners can upload their businesses so that users can interact with these businesses and give reviews",
    "version": "v1"
  },
  "host": "http://127.0.0.1:7000",
  "basePath": "/api/v1",

  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "Add a new user to the app", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "firstName",
            "type": "string",
            "description": "first name of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "in": "body",
            "name": "lastName",
            "type": "string",
            "description": "last name of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "in": "body",
            "name": "email",
            "type": "string",
            "description": "email of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "in": "body",
            "name": "password",
            "type": "string",
            "description": "password for the account",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
            
          }
        ],
        "responses": {
          "201": {
            "description": "user added successfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": 
              "required fields must be filled",
              "schema": {
                "$ref": "#/definitions/Message"
              } 
             }
        }
      }

    },

    "/auth/login": {
      "post": {
        "summary": "logs in a user into the app", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "email",
            "type": "string",
            "description": "email of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "in": "body",
            "name": "password",
            "type": "string",
            "description": "password for the account",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
            
          }
        ],
        "responses": {
          "201": {
            "description": "You're welcome",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "required fields must be filled",
              "$ref": "#/definitions/Message"
          },
          "404": {
            "description": "Invalid email or password",
              "$ref": "#/definitions/Message"
          }
        }
      }

    },
    
    "/businesses": {
      "post": {
        "summary": "adds a new business", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "businessName",
            "type": "string",
            "description": "name of the business",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Business"
            }
          },
          {
            "in": "body",
            "name": "description",
            "type": "string",
            "description": "description of the business",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Business"
            } 
          },
          {
            "in": "body",
            "name": "categories",
            "type": "array",
            "description": "an array of categories the business belongs to",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Business"
            } 
          },
          {
            "in": "body",
            "name": "productsOrServices",
            "type": "string",
            "description": "list of products or services offered by the business",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Business"
            } 
          },
          {
            "in": "body",
            "name": "location",
            "type": "string",
            "description": "location of the business",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Business"
            } 
          },
          {
            "in": "body",
            "name": "address",
            "type": "string",
            "description": "address of the business",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Business"
            } 
          }  
        ],
        "responses": {          
          "404": {
            "description": "user cannot be found",
              "$ref": "#/definitions/Message"
          },
          "201": {
            "description": "adds a new business sucessfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "required fields must be filled",
              "$ref": "#/definitions/Message"
          },
          "500": {
            "description": "user not registered yet",
              "$ref": "#/definitions/Message"
            }
          }
      },
      "get": {
        "summary": "returns all businesses", 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "params",
            "name": "categories or location",
            "type": "string",
            "description": "the categories or location of the business",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Business"
            }
          }          
        ],        
        "responses": {          
          "404": {
            "description": "business cannot be found",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "200": {
            "description": "businesses found",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
      }
    }
  },


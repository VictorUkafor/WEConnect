    "/businesses/{businessId}/reviews": {
      "post": {
        "summary": "Adds a review to a business", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "reviewBody",
            "type": "string",
            "description": "review for a business",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Review"
            }
          },
          {
            "in": "params",
            "name": "businessId",
            "type": "integer",
            "description": "id for a business",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Review"
            }
          }          
        ],
        "responses": {
          "201": {
            "description": "review added to a business",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "404": {
            "description": "business cannot be found ",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },          
          "400": {
            "description": "review field must be filled",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
        }
      },
      "get": {
        "summary": "return reviews for a business",  
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "params",
            "name": "businessId",
            "type": "integer",
            "description": "id for a business",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Review"
            }
          }          
        ],
        "responses": {
          "200": {
            "description": "reviews for a business",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "404": {
            "description": "business cannot be found ",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
        }
      }      

    } 
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "A unique identifier of the user. Automatically assigned by the API when the user is created"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user"
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user"
        },
        "email": {
          "type": "string",
          "description": "email of the user"
        },
        "password": {
          "type": "string",
          "description": "password of the user"
        }                              
      }
    },
    "Business": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "A unique identifier of the user. Automatically assigned by the API when the user is created"
        },
        "userId": {
          "type": "number",
          "description": "The id of the user that created the business"
        },        
        "businessName": {
          "type": "string",
          "description": "Name of the business"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the business"
        },
        "categories": {
          "type": "array",
          "description": "An array of categories the business belongs to"
        },
        "productsOrServices": {
          "type": "string",
          "description": "A list of products or services offered by the business"
        },        
        "location": {
          "type": "string",
          "description": "location of the business"
        }
        ,        
        "address": {
          "type": "string",
          "description": "address of the business"
        }                                      
      }
    },
    "Review": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "A unique identifier of the user. Automatically assigned by the API when the user is created"
        },
        "userId": {
          "type": "number",
          "description": "The id of the business that owns the review"
        },        
        "name": {
          "type": "string",
          "description": "Name of the user that adding the review"
        },
        "email": {
          "type": "string",
          "description": "Email of the user that adding the review"
        },
        "reviewBody": {
          "type": "string",
          "description": "The review of the business"
        }                                     
      }
    }      
  } 


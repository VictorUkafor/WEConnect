            "required": true,
            "schema": {
              "$ref": "#/definitions/Business"
            }
          } 
        ],
        "responses": {          
          "404": {
            "description": "business cannot be found",
              "$ref": "#/definitions/Message"
          },
          "200": {
            "description": "business deleted sucessfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "required fields must be filled",
              "$ref": "#/definitions/Message"
          },
          "500": {
            "description": "user not registered yet",
              "$ref": "#/definitions/Message"
            }
          }
      },
      "get": {
        "summary": "returns a business",
        "parameters": [
          {
            "in": "params",
            "name": "businessId",
            "type": "integer",
